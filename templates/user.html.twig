<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css"> {% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
	</head>
	<body class="layout with-sidenav">
		<header>
			<nav class="navbar primary">
				<a href="" class="navbar-brand">TechnicalAssessment</a>
 {% if app.user %}
        <li class="nav-item">
          {% if "ROLE_ADMIN" in app.user.roles %}
        </li>
            Admin {{ app.user.firstname }}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('admin_list_user') }}">User list</a>
        </li>
                <li class="nav-item">
          <a class="nav-link" href="{{ path('admin_list_document') }}">Document list</a>
        </li>
           {% else %}
                Utilisateur   {{ app.user.firstname }} 
            {% endif %}
        </li>
        <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
        </li>
		<li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">Register</a>
        </li>
        {% endif %}
				</div>
			</nav>
		</header>
		<div id="example-sidenav" class="sidenav large fixed white">
			<div class="sidenav-header">
				<button data-target="example-sidenav" class="sidenav-trigger">
					<i class="fas fa-times"></i>
				</button>
			</div>
			<a href="{{ path('app_user') }}" class="sidenav-link active">My profile</a>
			<a href="{{ path('app_document') }}" class="sidenav-link">My documents</a>
		</div>
		<main>
			<button data-target="example-sidenav" class="btn press amaranth dark-1 sidenav-trigger hide-md-up">
				Open sidenav
			</button>
			{% block body %}{% endblock %}
		</main>

		<footer class="footer primary">
			Copyright Â© 2019 - Example
		</footer>


		<script src="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/js/axentix.min.js"></script>
		{% block javascripts %}{% endblock %}
		<script>
			var sidenav = new Sidenav('#example-sidenav');
		</script>
		<script src="{{ asset('js/scripts.js') }}"></script>
	</body>
</html>
