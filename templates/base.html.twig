<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    </head>
    <body>
        <header>
        <nav class="navbar primary">
            <a href="{{ path('app_home') }}" class="navbar-brand">TechnicalAssessement</a>
            <div class="navbar-menu ml-auto">
            <a class="navbar-link" href="#">Accueil</a>
 {% if app.user %}
        <li class="nav-item">
          {% if "ROLE_ADMIN" in app.user.roles %}
          Administrateur
           {% else %}
                Utilisateur   {{ app.user.firstname }} 
            {% endif %}
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
        {% endif %}
           
            </div>
        </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        {# <footer class="footer primary">
        Copyright © 2022 - TechnicalAssessement
        </footer> #}

       

        <script src="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/js/axentix.min.js"></script>
        {% block javascripts %}
        <script>
            let drop = new Axentix.Dropdown('#dropdown')
        </script>
        {% endblock %}
        <script src="{{ asset('js/scripts.js') }}"></script>
    </body>
</html>
